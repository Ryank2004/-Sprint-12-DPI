        <% chapters.forEach(function(chapter) { %>
            <a href="/chapter/<%= chapter.id %>" class="plus-button" data-id="<%= chapter.id %>"></a>
        <% }) %>
        </div>
    </div>
</div>

<section class="chapter-display-container">
    <div id="chapter-display" class="chapter-display"></div>
</section>


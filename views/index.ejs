<header>
    <h1>
        Exposense
    </h1>
</header>

<section class="intro-text">
    <p><%= tno.intro %></p>
</section>

<div class="svg-container">
    <div class="svg-content">
        <div class="svg-part-container">
            <img class="svg-part" src="/assets/plaat_deel_1.svg" alt="plaatje eiland">
            <img class="svg-part" src="/assets/plaat_deel_2.svg" alt="plaatje eiland">
            <img class="svg-part" src="/assets/plaat_deel_3.svg" alt="plaatje eiland">
